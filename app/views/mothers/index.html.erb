




<div class="container">
  <div class="row mb-3">
      <h1 class="mt-3"> Our selection of Mothers </h1>
    <div class="col-8 grid px-3" >
      <% @mothers.each do |mother| %>
          <%= link_to mother_path(mother)  do%>
            <div class="card-trip p-3" data-aos="fade-up">
                <%= cl_image_tag mother.photos.sample.key, height: 300, width: 400, crop: :fill %>
                <h2><%= mother.name%></h2>
                <p><%= mother.age %> yo</p>
                <p><%= mother.description.first(20) %>...</p>

            </div>
          <% end %>
      <% end %>
    </div>

    <div
      class="col-4"
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key=<%= ENV['MAPBOX_API_KEY'] %>
    ></div>

    </div>
  </div>
</div>

